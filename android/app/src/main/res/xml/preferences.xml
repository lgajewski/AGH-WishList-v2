<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="Server credentials"
            android:key="server_credentials">
        <EditTextPreference
                android:title="Host"
                android:key="server_host"
                android:summary="Please provide server hostname"
                android:singleLine="true"
                android:defaultValue="@string/server_host"/>
        <EditTextPreference
                android:title="Port"
                android:key="server_port"
                android:summary="Please provide server port"
                android:inputType="number"
                android:singleLine="true"
                android:defaultValue="@string/server_port"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="Tools"
            android:key="tools">
        <Preference
                android:title="Reset"
                android:key="reset"
                android:summary="Reset all settings to default"/>
    </PreferenceCategory>
</PreferenceScreen>